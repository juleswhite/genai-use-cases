---
import Layout from '../layouts/Layout.astro';
import ChatConversation from '../components/ChatConversation.astro';
import '../styles/global.css';

const documentShowcaseConversation = [
  {
    id: '1',
    sender: 'user' as const,
    message: 'I have various documents I need you to analyze. Here are the files:',
    timestamp: '3:00 PM',
    documents: [
      {
        name: 'Quarterly_Financial_Report_Q3_2024.pdf',
        type: 'pdf' as const,
        size: '3.2 MB'
      },
      {
        name: 'Employee_Performance_Reviews.xlsx',
        type: 'xlsx' as const,
        size: '1.5 MB'
      },
      {
        name: 'Marketing_Strategy_Presentation.pptx',
        type: 'pptx' as const,
        size: '12.4 MB'
      }
    ]
  },
  {
    id: '2',
    sender: 'ai' as const,
    message: 'I\'ll analyze all your documents and provide comprehensive insights. Processing the financial data, performance metrics, and strategic presentations now...',
    timestamp: '3:01 PM'
  },
  {
    id: '3',
    sender: 'user' as const,
    message: 'Great! I also have some additional data files and notes.',
    timestamp: '3:02 PM',
    documents: [
      {
        name: 'Customer_Survey_Responses.csv',
        type: 'csv' as const,
        size: '428 KB'
      },
      {
        name: 'Project_Requirements.docx',
        type: 'docx' as const,
        size: '782 KB'
      },
      {
        name: 'Meeting_Notes_Oct_2024.txt',
        type: 'txt' as const,
        size: '45 KB'
      }
    ]
  },
  {
    id: '4',
    sender: 'ai' as const,
    message: 'ðŸ“Š **Analysis Complete!** Here\'s what I found across all your documents:\n\n**Key Insights:**\nâ€¢ Financial performance shows 15% growth\nâ€¢ Employee satisfaction up 23% this quarter\nâ€¢ Marketing ROI improved significantly\nâ€¢ Customer feedback indicates high product satisfaction\n\nI\'ve generated comprehensive reports based on this multi-document analysis.',
    timestamp: '3:05 PM',
    documents: [
      {
        name: 'Comprehensive_Business_Analysis.pdf',
        type: 'pdf' as const,
        size: '2.1 MB'
      },
      {
        name: 'Executive_Dashboard_Data.xlsx',
        type: 'xlsx' as const,
        size: '956 KB'
      }
